# =====================
# Target System配置
# =====================
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_IMAGES_GZIP=y

# =====================
# 内核配置
# =====================
CONFIG_LINUX_6_1=y
CONFIG_KERNEL_BUILD_USER="OpenWrt"
CONFIG_KERNEL_BUILD_DOMAIN="openwrt.org"
CONFIG_KERNEL_CC_OPTIMIZE_FOR_PERFORMANCE=y

# =====================
# 无线网卡驱动配置
# =====================
# 核心无线模块
CONFIG_PACKAGE_kmod-mac80211=y
CONFIG_PACKAGE_kmod-cfg80211=y

# Intel 3168NGW专用驱动
CONFIG_PACKAGE_kmod-iwlwifi=y
CONFIG_PACKAGE_iwlwifi-firmware-iwl3168=y  # OpenWrt 23.05中的正确固件包名

# 加密支持
CONFIG_PACKAGE_kmod-crypto-ccm=y
CONFIG_PACKAGE_kmod-crypto-gcm=y

# =====================
# LuCI界面配置
# =====================
# 基础LuCI组件
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-lib-base=y
CONFIG_PACKAGE_luci-lib-ipkg=y

# 无线管理面板
CONFIG_PACKAGE_luci-app-wireless=y
CONFIG_PACKAGE_luci-mod-admin-full=y

# 主题支持
CONFIG_PACKAGE_luci-theme-bootstrap=y

# 中文语言支持
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-wireless-zh-cn=y

# =====================
# 网络工具配置
# =====================
# 无线工具
CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iw-full=y
CONFIG_PACKAGE_wpa-cli=y
CONFIG_PACKAGE_hostapd-common=y

# 网络实用工具
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_iperf3=y
CONFIG_PACKAGE_tcpdump=y

# =====================
# 系统工具配置
# =====================
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_usbutils=y
CONFIG_PACKAGE_pciutils=y

# =====================
# 固件特性配置
# =====================
CONFIG_IB=y
CONFIG_IMAGEOPT=y
CONFIG_PER_FDEV_RELAX=y
CONFIG_TARGET_ROOTFS_EXT4FS=y
CONFIG_TARGET_ROOTFS_PARTSIZE=512
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_VMDK_IMAGES=y
